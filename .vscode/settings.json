{
  "editor.formatOnSave": true,

  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always"
  },

  "files.eol": "\r\n",

  "eslint.options": {
    "extensions": [".js", ".jsx", ".ts", ".tsx"]
  },

  "eslint.validate": [
    "javascript",

    "javascriptreact",

    "typescript",

    "typescriptreact"
  ],

  "prettier.requireConfig": true
}
